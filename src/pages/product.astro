---
import Layout from "../layouts/Layout.astro";
import "../styles/product.scss";
---

<Layout>
  <!-- Navigation -->
  <nav class="bg-white shadow-sm py-4 sticky top-0 z-50">
    <div
      class="container mx-auto px-4 sm:px-6 flex justify-between items-center"
    >
      <div class="text-2xl font-bold text-pink-300 heading-font">
        Sweet Dream
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex space-x-8">
        <a
          href="#"
          class="text-gray-700 hover:text-pink-300 transition py-2"
          >Home</a
        >
        <a
          href="#"
          class="text-gray-700 hover:text-pink-300 transition py-2"
          >Collections</a
        >
        <a
          href="#"
          class="text-gray-700 hover:text-pink-300 transition py-2"
          >About</a
        >
        <a
          href="#"
          class="text-gray-700 hover:text-pink-300 transition py-2"
          >Contact</a
        >
      </div>

      <div class="flex items-center space-x-4">
        <a
          href="#"
          class="text-gray-700 hover:text-pink-300 transition touch-target"
          ><i class="fas fa-search"></i></a
        >
        <a
          href="#"
          class="text-gray-700 hover:text-pink-300 transition touch-target"
          ><i class="fas fa-heart"></i></a
        >
        <a
          href="#"
          class="text-gray-700 hover:text-pink-300 transition touch-target"
          ><i class="fas fa-shopping-bag"></i></a
        >
        <button
          id="mobile-menu-button"
          class="md:hidden text-gray-700 touch-target"
        >
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="mobile-menu bg-white md:hidden"
    >
      <div class="px-2 pt-2 pb-4 space-y-1">
        <a
          href="#"
          class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-pink-300 hover:bg-pink-50 rounded-md"
          >Home</a
        >
        <a
          href="#"
          class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-pink-300 hover:bg-pink-50 rounded-md"
          >Collections</a
        >
        <a
          href="#"
          class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-pink-300 hover:bg-pink-50 rounded-md"
          >About</a
        >
        <a
          href="#"
          class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-pink-300 hover:bg-pink-50 rounded-md"
          >Contact</a
        >
      </div>
    </div>
  </nav>

  <!-- Breadcrumbs -->
  <div class="bg-pink-50 py-3">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="text-sm text-gray-600">
        <a
          href="#"
          class="hover:text-pink-300"
          >Home</a
        >
        <a
          href="#"
          class="hover:text-pink-300"
          >Pajama Sets</a
        >
        <span class="text-pink-300">Cloud Pajama Set</span>
      </div>
    </div>
  </div>

  <!-- Product Detail Section -->
  <section class="py-8 sm:py-12">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Product Gallery -->
        <div class="lg:w-1/2 product-gallery">
          <div class="bg-white rounded-lg overflow-hidden shadow-sm mb-4">
            <img
              id="main-image"
              src="https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=880&q=80"
              alt="Cloud Pajama Set"
              class="w-full h-auto cursor-zoom-in"
              onclick="zoomImage()"
            />
          </div>

          <div class="flex overflow-x-auto thumbnail-container space-x-2 pb-2">
            <div
              class="thumbnail flex-shrink-0 w-20 h-20 bg-white rounded-md overflow-hidden cursor-pointer active"
              onclick="changeMainImage('https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=880&q=80', this)"
            >
              <img
                src="https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=200&q=80"
                alt="Cloud Pajama Set Front"
                class="w-full h-full object-cover"
              />
            </div>
            <div
              class="thumbnail flex-shrink-0 w-20 h-20 bg-white rounded-md overflow-hidden cursor-pointer"
              onclick="changeMainImage('https://images.unsplash.com/photo-1595341595379-cf2df1f6cee3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=880&q=80', this)"
            >
              <img
                src="https://images.unsplash.com/photo-1595341595379-cf2df1f6cee3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=200&q=80"
                alt="Cloud Pajama Set Back"
                class="w-full h-full object-cover"
              />
            </div>
            <div
              class="thumbnail flex-shrink-0 w-20 h-20 bg-white rounded-md overflow-hidden cursor-pointer"
              onclick="changeMainImage('https://images.unsplash.com/photo-1592862037891-11cf3445f3d4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=880&q=80', this)"
            >
              <img
                src="https://images.unsplash.com/photo-1592862037891-11cf3445f3d4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=200&q=80"
                alt="Cloud Pajama Set Detail"
                class="w-full h-full object-cover"
              />
            </div>
            <div
              class="thumbnail flex-shrink-0 w-20 h-20 bg-white rounded-md overflow-hidden cursor-pointer"
              onclick="changeMainImage('https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=880&q=80', this)"
            >
              <img
                src="https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=200&q=80"
                alt="Cloud Pajama Set Lifestyle"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>

        <!-- Product Info -->
        <div class="lg:w-1/2">
          <h1
            class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2 heading-font"
          >
            Sweet Dreams Cloud Pajama Set
          </h1>

          <div class="flex items-center mb-4">
            <div class="flex mr-2">
              <i class="fas fa-star review-star filled"></i>
              <i class="fas fa-star review-star filled"></i>
              <i class="fas fa-star review-star filled"></i>
              <i class="fas fa-star review-star filled"></i>
              <i class="fas fa-star review-star"></i>
            </div>
            <span class="text-gray-600 text-sm">(42 reviews)</span>
            <span class="mx-2 text-gray-400">|</span>
            <span class="text-gray-600 text-sm">500+ sold</span>
          </div>

          <div class="mb-6">
            <span class="text-2xl font-bold text-pink-300">$39.99</span>
            <span class="ml-2 text-gray-500 line-through">$49.99</span>
            <span
              class="ml-2 text-pink-300 bg-pink-100 px-2 py-1 rounded text-sm"
              >20% OFF</span
            >
          </div>

          <p class="text-gray-700 mb-6">
            Snuggle up in our ultra-soft Cloud Pajama Set, featuring a dreamy
            pastel cloud pattern that's as cute as it is comfortable. Perfect
            for lounging or sweet dreams!
          </p>

          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-800 mb-2">
              COLOR: <span
                id="selected-color"
                class="font-normal"
                >Pastel Blue</span
              >
            </h3>
            <div class="flex space-x-2">
              <div
                class="color-swatch w-8 h-8 rounded-full bg-blue-100 cursor-pointer selected"
                onclick="selectColor('Pastel Blue', this, '#A7C7E7')"
              >
              </div>
              <div
                class="color-swatch w-8 h-8 rounded-full bg-pink-100 cursor-pointer"
                onclick="selectColor('Blush Pink', this, '#F9A8D4')"
              >
              </div>
              <div
                class="color-swatch w-8 h-8 rounded-full bg-purple-100 cursor-pointer"
                onclick="selectColor('Lavender', this, '#C4B5FD')"
              >
              </div>
              <div
                class="color-swatch w-8 h-8 rounded-full bg-gray-100 cursor-pointer"
                onclick="selectColor('Misty Gray', this, '#D1D5DB')"
              >
              </div>
            </div>
          </div>

          <div class="mb-8">
            <h3 class="text-sm font-semibold text-gray-800 mb-2">SIZE:</h3>
            <div class="flex flex-wrap gap-2">
              <div
                class="size-option w-12 h-10 flex items-center justify-center border border-gray-300 rounded-md cursor-pointer font-medium text-gray-700"
                onclick="selectSize('XS', this)"
              >
                XS
              </div>
              <div
                class="size-option w-12 h-10 flex items-center justify-center border border-gray-300 rounded-md cursor-pointer font-medium text-gray-700 selected"
                onclick="selectSize('S', this)"
              >
                S
              </div>
              <div
                class="size-option w-12 h-10 flex items-center justify-center border border-gray-300 rounded-md cursor-pointer font-medium text-gray-700"
                onclick="selectSize('M', this)"
              >
                M
              </div>
              <div
                class="size-option w-12 h-10 flex items-center justify-center border border-gray-300 rounded-md cursor-pointer font-medium text-gray-700"
                onclick="selectSize('L', this)"
              >
                L
              </div>
              <div
                class="size-option w-12 h-10 flex items-center justify-center border border-gray-300 rounded-md cursor-pointer font-medium text-gray-700"
                onclick="selectSize('XL', this)"
              >
                XL
              </div>
            </div>
            <a
              href="#"
              class="text-pink-300 text-sm mt-2 inline-block hover:underline"
              >View Size Chart</a
            >
          </div>

          <div class="flex flex-col sm:flex-row gap-3 mb-6">
            <button
              class="bg-pink-300 hover:bg-pink-400 text-white px-6 py-3 rounded-full font-medium transition duration-300 flex-1 text-center touch-target"
            >
              <i class="fas fa-shopping-cart mr-2"></i> Shop on Our Store
            </button>
            <button
              class="border border-pink-300 text-pink-300 hover:bg-pink-50 px-6 py-3 rounded-full font-medium transition duration-300 flex-1 text-center touch-target"
            >
              <i class="far fa-heart mr-2"></i> Add to Wishlist
            </button>
          </div>

          <div class="bg-pink-50 rounded-lg p-4 mb-6">
            <h3 class="font-semibold text-gray-800 mb-2 flex items-center">
              <i class="fas fa-cloud text-pink-300 mr-2"></i> Material Spotlight
            </h3>
            <p class="text-gray-700 text-sm">
              Made from our signature ultra-soft cotton blend (95% cotton, 5%
              spandex) for breathable comfort that gets softer with every wash.
              The perfect balance of stretch and coziness.
            </p>
          </div>

          <div class="border-t border-b border-gray-200 py-4">
            <div class="flex items-center justify-between mb-2">
              <span class="text-gray-700 text-sm"
                ><i class="fas fa-truck text-pink-300 mr-2"></i> Free Shipping</span
              >
              <span class="text-gray-700 text-sm">On orders over $50</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-700 text-sm"
                ><i class="fas fa-undo text-pink-300 mr-2"></i> Easy Returns</span
              >
              <span class="text-gray-700 text-sm">30-day policy</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Details Tabs -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8">
          <button
            id="details-tab"
            class="tab-button active border-b-2 border-pink-300 text-pink-300 px-1 py-4 text-sm font-medium"
          >
            Details
          </button>
          <button
            id="care-tab"
            class="tab-button border-b-2 border-transparent text-gray-500 hover:text-gray-700 px-1 py-4 text-sm font-medium"
          >
            Care Instructions
          </button>
          <button
            id="shipping-tab"
            class="tab-button border-b-2 border-transparent text-gray-500 hover:text-gray-700 px-1 py-4 text-sm font-medium"
          >
            Shipping & Returns
          </button>
        </nav>
      </div>

      <div
        id="details-content"
        class="tab-content active py-6"
      >
        <h3 class="text-lg font-semibold text-gray-800 mb-3">
          Product Details
        </h3>
        <ul class="list-disc pl-5 text-gray-700 space-y-2">
          <li>Super soft cotton blend fabric (95% cotton, 5% spandex)</li>
          <li>Relaxed fit for ultimate comfort</li>
          <li>Breathable material keeps you cool all night</li>
          <li>Elastic waistband with adjustable drawstring</li>
          <li>Machine washable - gets softer with every wash</li>
          <li>Set includes: top with button front and matching pants</li>
          <li>Delicate cloud pattern in soothing pastel colors</li>
        </ul>
      </div>

      <div
        id="care-content"
        class="tab-content hidden py-6"
      >
        <h3 class="text-lg font-semibold text-gray-800 mb-3">
          Care Instructions
        </h3>
        <ul class="list-disc pl-5 text-gray-700 space-y-2">
          <li>Machine wash cold with like colors</li>
          <li>Use mild detergent</li>
          <li>Tumble dry low or line dry for best results</li>
          <li>Iron on low heat if needed</li>
          <li>Do not bleach</li>
          <li>For long-lasting softness, wash inside out</li>
        </ul>
      </div>

      <div
        id="shipping-content"
        class="tab-content hidden py-6"
      >
        <h3 class="text-lg font-semibold text-gray-800 mb-3">
          Shipping Information
        </h3>
        <ul class="list-disc pl-5 text-gray-700 space-y-2 mb-4">
          <li>Processing time: 1-2 business days</li>
          <li>Standard shipping: 3-5 business days</li>
          <li>Express shipping available at checkout</li>
          <li>Free shipping on orders over $50</li>
          <li>International shipping available</li>
        </ul>

        <h3 class="text-lg font-semibold text-gray-800 mb-3">Returns Policy</h3>
        <ul class="list-disc pl-5 text-gray-700 space-y-2">
          <li>30-day return policy from delivery date</li>
          <li>Items must be unworn, unwashed with tags attached</li>
          <li>Original proof of purchase required</li>
          <li>Return shipping costs are customer's responsibility</li>
          <li>Refunds issued to original payment method</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Reviews Section -->
  <section class="py-12 bg-pink-50">
    <div class="container mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-6 heading-font">
        Customer Reviews
      </h2>

      <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <div
          class="flex flex-col md:flex-row md:items-center md:justify-between mb-6"
        >
          <div class="mb-4 md:mb-0">
            <div class="flex items-center">
              <div class="text-3xl font-bold mr-4">4.2</div>
              <div>
                <div class="flex mb-1">
                  <i class="fas fa-star review-star filled"></i>
                  <i class="fas fa-star review-star filled"></i>
                  <i class="fas fa-star review-star filled"></i>
                  <i class="fas fa-star review-star filled"></i>
                  <i class="fas fa-star review-star"></i>
                </div>
                <div class="text-gray-600 text-sm">Based on 42 reviews</div>
              </div>
            </div>
          </div>

          <div class="flex space-x-2">
            <button
              class="border border-gray-300 bg-white text-gray-700 px-4 py-2 rounded-full text-sm hover:bg-gray-50"
            >
              <i class="fas fa-filter mr-1"></i> Filter
            </button>
            <button
              class="bg-pink-300 text-white px-4 py-2 rounded-full text-sm hover:bg-pink-400"
            >
              <i class="fas fa-pen mr-1"></i> Write a Review
            </button>
          </div>
        </div>

        <div class="flex overflow-x-auto pb-2 mb-6">
          <button
            class="review-topic flex-shrink-0 bg-pink-100 text-pink-300 px-4 py-2 rounded-full text-sm mr-2 hover:bg-pink-200"
          >
            Softness (32)
          </button>
          <button
            class="review-topic flex-shrink-0 bg-gray-100 text-gray-700 px-4 py-2 rounded-full text-sm mr-2 hover:bg-gray-200"
          >
            Fit (28)
          </button>
          <button
            class="review-topic flex-shrink-0 bg-gray-100 text-gray-700 px-4 py-2 rounded-full text-sm mr-2 hover:bg-gray-200"
          >
            Comfort (25)
          </button>
          <button
            class="review-topic flex-shrink-0 bg-gray-100 text-gray-700 px-4 py-2 rounded-full text-sm mr-2 hover:bg-gray-200"
          >
            Quality (18)
          </button>
          <button
            class="review-topic flex-shrink-0 bg-gray-100 text-gray-700 px-4 py-2 rounded-full text-sm mr-2 hover:bg-gray-200"
          >
            Cuteness (15)
          </button>
        </div>

        <!-- Review 1 -->
        <div class="border-b border-gray-200 pb-6 mb-6">
          <div class="flex justify-between mb-2">
            <div class="flex items-center">
              <div class="flex mr-2">
                <i class="fas fa-star review-star filled"></i>
                <i class="fas fa-star review-star filled"></i>
                <i class="fas fa-star review-star filled"></i>
                <i class="fas fa-star review-star filled"></i>
                <i class="fas fa-star review-star filled"></i>
              </div>
              <span class="font-medium text-gray-800">Sarah J.</span>
            </div>
            <span class="text-gray-500 text-sm">2 weeks ago</span>
          </div>
          <h3 class="font-medium text-gray-800 mb-2">
            So soft and comfortable!
          </h3>
          <p class="text-gray-700 mb-3">
            These pajamas are even softer than I imagined! The fabric is so cozy
            and the fit is perfect. I got the size small and it fits just right
            - not too tight, not too loose. The cloud pattern is adorable and
            the colors are exactly as pictured.
          </p>
          <div class="flex items-center text-sm text-gray-500">
            <button class="flex items-center mr-4 hover:text-pink-300">
              <i class="far fa-thumbs-up mr-1"></i> Helpful (12)
            </button>
            <button class="flex items-center hover:text-pink-300">
              <i class="far fa-thumbs-down mr-1"></i> Not Helpful (0)
            </button>
          </div>
        </div>

        <!-- Review 2 -->
        <div class="border-b border-gray-200 pb-6 mb-6">
          <div class="flex justify-between mb-2">
            <div class="flex items-center">
              <div class="flex mr-2">
                <i class="fas fa-star review-star filled"></i>
                <i class="fas fa-star review-star filled"></i>
                <i class="fas fa-star review-star filled"></i>
                <i class="fas fa-star review-star filled"></i>
                <i class="fas fa-star review-star"></i>
              </div>
              <span class="font-medium text-gray-800">Emily R.</span>
            </div>
            <span class="text-gray-500 text-sm">1 month ago</span>
          </div>
          <h3 class="font-medium text-gray-800 mb-2">Love them!</h3>
          <p class="text-gray-700 mb-3">
            These pajamas are so cute and comfortable. The material is soft and
            breathable, perfect for sleeping. I ordered my usual size medium and
            they fit great. The only reason I didn't give 5 stars is because the
            color was slightly lighter than I expected, but still very pretty.
          </p>
          <div class="flex items-center text-sm text-gray-500">
            <button class="flex items-center mr-4 hover:text-pink-300">
              <i class="far fa-thumbs-up mr-1"></i> Helpful (8)
            </button>
            <button class="flex items-center hover:text-pink-300">
              <i class="far fa-thumbs-down mr-1"></i> Not Helpful (1)
            </button>
          </div>
        </div>

        <button
          class="w-full border border-pink-300 text-pink-300 hover:bg-pink-50 px-6 py-3 rounded-full font-medium transition duration-300"
        >
          Load More Reviews
        </button>
      </div>
    </div>
  </section>

  <!-- Related Products -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold text-gray-800 heading-font">
          You Might Also Love
        </h2>
        <a
          href="#"
          class="text-pink-300 hover:text-pink-400 font-medium"
          >View All Pajamas</a
        >
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6">
        <!-- Product 1 -->
        <div
          class="product-card bg-white rounded-lg overflow-hidden shadow-sm transition duration-300 hover:shadow-md"
        >
          <div class="relative pb-[125%] overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=880&q=80"
              alt="Starry Night PJ Set"
              class="absolute top-0 left-0 w-full h-full object-cover"
            />
            <button
              class="absolute top-2 right-2 bg-white rounded-full w-8 h-8 flex items-center justify-center shadow-sm hover:bg-pink-100"
            >
              <i class="far fa-heart text-gray-600"></i>
            </button>
          </div>
          <div class="p-4">
            <h3 class="text-sm font-semibold text-gray-800 mb-1">
              Starry Night PJ Set
            </h3>
            <p class="text-pink-300 font-medium">$42.99</p>
          </div>
